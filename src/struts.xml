<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="slsearch" extends="json-default">
        <action name="searchAction" class="action.SLSearch">
            <result type="json">
                <param name="root">data</param>
            </result>
        </action>
    </package>

    <package name="slcontent" extends="json-default">
        <action name="contentAction" class="action.SLContent">
            <result type="json">
                <param name="root">data</param>
            </result>
        </action>
    </package>

    <package name="slauthor" extends="json-default">
        <action name="authorAction" class="action.SLAuthor">
            <result type="json">
                <param name="root">data</param>
            </result>
        </action>
    </package>
</struts>