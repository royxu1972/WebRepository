<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="slsearch" extends="json-default">
        <action name="searchAction" class="action.SLSearch">
            <result type="json">
                <param name="root">data</param>
            </result>
        </action>
    </package>

    <package name="slcontent" extends="json-default">
        <action name="contentAction" class="action.SLContent">
            <result type="json">
                <param name="root">data</param>
            </result>
        </action>
    </package>

    <!-- cite download -->
    <package name="citeload" extends="json-default">
        <action name="citeAction" class="action.CiteLoad">
            <result type="json">
                <param name="root">data1</param>
            </result>
        </action>
    </package>

    <package name="download" extends="struts-default">
        <action name="downAction" class="action.DownLoad">
            <result name="success" type="stream">
                <param name="contentType">application/octet-stream</param>
                <param name="contentDisposition">
                    attachment;filename="CiteList.txt"
                </param>
                <param name="inputName">DownloadStream</param>
            </result>
        </action>
    </package>


</struts>